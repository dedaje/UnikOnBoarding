@page
@model UnikOnBoarding.Pages.User.RemoveUserModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<h2>Slet et Projekt</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="RemoveViewModel.Id" class="form-control" />
            <input type="hidden" asp-for="RemoveViewModel.ProjectId" class="form-control" />
            <input type="hidden" asp-for="RemoveViewModel.ProjectName" class="form-control" />
            <input type="hidden" asp-for="RemoveViewModel.UserId" class="form-control" />
            <fieldset>
                <legend>Projekt Information</legend>
                <p>
                    <span>Projekt Id:</span>
                    <span>@Model.RemoveViewModel.ProjectId</span>
                </p>
                <p>
                    <span>Projekt Navn:</span>
                    <span>@Model.RemoveViewModel.ProjectName</span>
                </p>
                <p>
                    <span>Bruger:</span>
                    <span>@Model.RemoveViewModel.UserId</span>
                </p>
                
                <button type="submit" class="btn btn-default">Fjern Bruger fra Projektet</button>
            </fieldset>
        </form>
    </div>
</div>
