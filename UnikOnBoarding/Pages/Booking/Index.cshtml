@page
@model UnikOnBoarding.Pages.Booking.IndexModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    @if (AuthService.AuthorizeAsync(User, "KundePolicy").Result.Succeeded)
    {
        <a asp-page="./Create">Book en Tid</a>
    }
    <table class="table table-sm table-striped table-bordered">
        <thead>
        <tr>
            <th>Booking ID</th>
            <th>Dato</th>
            <th>Kunde</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        @if ((Model.IndexViewModel.Any()) && ((AuthService.AuthorizeAsync(User, "AdminPolicy").Result.Succeeded) || (AuthService.AuthorizeAsync(User, "SælgerPolicy").Result.Succeeded)))
        {
            foreach (var booking in Model.IndexViewModel)
            {
                <tr>
                    <td> @booking.Id </td>
                    <td>@booking.Date</td>
                    <td>@booking.UserId</td>
                    <td>
                        <!-- <snippet_Edit> -->
                        @if ((AuthService.AuthorizeAsync(User, "AdminPolicy").Result.Succeeded))
                        {
                            <a asp-page="./Edit" asp-route-id="@booking.Id">Rediger Booking</a>
                        }
                        <!-- </snippet_Edit> -->
                        |
                        <!-- <snippet_Delete> -->
                        @if ((AuthService.AuthorizeAsync(User, "AdminPolicy").Result.Succeeded) || ((AuthService.AuthorizeAsync(User, "SælgerPolicy").Result.Succeeded) && (@booking.Date.Date < DateTime.Now.Date)))
                        {
                            <a asp-page="./Delete" asp-route-id="@booking.Id">Slet Booking</a>
                        }
                        <!-- </snippet_Delete> -->
                    </td>   
                </tr>
            }
        }
        else if ((Model.IndexViewModel.Any()) && (AuthService.AuthorizeAsync(User, "KundePolicy").Result.Succeeded))
        {
            foreach (var booking in Model.IndexViewModel.FindAll(k => k.UserId == (User.Identity?.Name ?? string.Empty)))
            {
                <tr>
                    <td> @booking.Id </td>
                    <td>@booking.Date</td>
                    <td>@booking.UserId</td>
                    @if ((AuthService.AuthorizeAsync(User, "KundePolicy").Result.Succeeded))
                    {
                        <td>
                            <!-- <snippet_Edit> -->
                            <a asp-page="./Edit" asp-route-id="@booking.Id">Rediger Booking</a>
                            <!-- </snippet_Edit> -->
                            |
                            <!-- <snippet_Delete> -->
                            <a asp-page="./Delete" asp-route-id="@booking.Id">Slet Booking</a>
                            <!-- </snippet_Delete> -->
                        </td>
                    }
                </tr>
            }
        }
        </tbody>
    </table>
</form>