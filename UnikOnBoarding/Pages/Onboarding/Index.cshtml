@page
@model UnikOnBoarding.Pages.Onboarding.IndexModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Dato</th>
                <th>Projekt Navn</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.IndexViewModel.Any())
            {
                foreach (var onboarding in Model.IndexViewModel)
                {
                    <tr>
                        <td> @onboarding.Id </td>
                        <td>@onboarding.Date</td>
                        <td>@onboarding.ProjektNavn</td>
                        <td>
                            <!-- <snippet_Edit> -->
                            <a asp-page="./Edit" asp-route-id="@onboarding.Id">Edit</a>
                            <!-- </snippet_Edit> -->
                            |
                            <!-- <snippet_Delete> -->
                            <a type="submit" asp-page-handler="delete" asp-route-id="@onboarding.Id">delete</a>
                            <!-- </snippet_Delete> -->
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-page="Create">Create New</a>
</form>