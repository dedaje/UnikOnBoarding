@page
@model UnikOnBoarding.Pages.Tasks.IndexModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Projekt ID</th>
            <th>Dato Tilføjet</th>
            <th>Opgave Navn</th>
            <th>Opgave Beskrivelse</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.IndexViewModel.Any())
        {
            foreach (var task in Model.IndexViewModel)
            {
                <tr>
                    <td> @task.TaskId</td>
                    <td> @task.ProjectId </td>
                    <td>@task.DateCreated</td>
                    <td>@task.TaskName</td>
                    <td>@task.TaskDescription</td>
                    <td>
                        <!-- <snippet_Edit> -->
                        <a asp-page="./Edit" asp-route-taskId="@task.TaskId">Rediger Projekt Navn</a>
                        <!-- </snippet_Edit> -->
                        |
                        <!-- <snippet_Delete> -->
                        <a asp-page="./Delete" asp-route-taskId="@task.TaskId">Slet Opgave</a>
                        <!-- </snippet_Delete> -->
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</form>