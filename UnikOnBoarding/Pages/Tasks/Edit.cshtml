@page
@model UnikOnBoarding.Pages.Tasks.EditModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<h2>Opdater Opgave</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TaskModel.Id" class="form-control" />
            <input type="hidden" asp-for="TaskModel.DateCreated" class="form-control" />
            <input type="hidden" asp-for="TaskModel.ProjectsId" class="form-control" />
            <input type="hidden" asp-for="TaskModel.Section" class="form-control" />
            <input type="hidden" asp-for="TaskModel.UsersId" class="form-control" />
            <div class="form-group">
                <label asp-for="TaskModel.TaskName"></label>
                <input asp-for="TaskModel.TaskName" class="form-control" />
                <span asp-validation-for="TaskModel.TaskName" class="text-danger"></span>

                <label asp-for="TaskModel.TaskDescription"></label>
                <input asp-for="TaskModel.TaskDescription" class="form-control" />
                <span asp-validation-for="TaskModel.TaskDescription" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Opdater opgave</button>
        </form>
    </div>
</div>