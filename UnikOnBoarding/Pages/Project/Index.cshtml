@page
@model UnikOnBoarding.Pages.Project.IndexModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    <table class="table">
        <thead>
        <tr>
            <th>Projekt ID</th>
            <th>Projekt Navn</th>
            <th>Dato Oprettet</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.IndexViewModel.Any())
        {
            foreach (var project in Model.IndexViewModel)
            {
                <tr>
                    <td> @project.ProjectId </td>
                    <td>@project.ProjectName</td>
                    <td>@project.DateCreated</td>
                    <td>
                        <!-- <snippet_Edit> -->
                        <a asp-page="./Edit" asp-route-projectId="@project.ProjectId">Rediger Projekt Navn</a>
                        <!-- </snippet_Edit> -->
                        |
                        <!-- <snippet_Delete> -->
                        <a asp-page="./Delete" asp-route-projectId="@project.ProjectId">Slet Projekt</a>
                        <!-- </snippet_Delete> -->
                    </td>
                    <td>
                        <a asp-page="../User/Index" asp-route-projectId="@project.ProjectId" asp-route-projectName="@project.ProjectName">Se Tilmeldte Brugere</a>
                    </td>
                    <td>
                        <a asp-page="../Tasks/Index" asp-route-projectId="@project.ProjectId">Se Opgaver</a>
                        |
                        <a asp-page="../Tasks/Create" asp-route-projectId="@project.ProjectId">Tilføj Opgave</a>
                    </td>    
                </tr>
            }
        }
        </tbody>
    </table>
    <a asp-page="./Create">Create New</a>
</form>
