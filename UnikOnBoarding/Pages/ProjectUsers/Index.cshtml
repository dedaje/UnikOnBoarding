}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<form method="post">
    <input type="hidden" asp-for="ProjectIndexModel.ProjectId" class="form-control" />
    <input type="hidden" asp-for="ProjectIndexModel.ProjectName" class="form-control" />
    <input type="hidden" asp-for="ProjectIndexModel.DateCreated" class="form-control" />
    <input type="hidden" asp-for="ProjectIndexModel.RowVersion" class="form-control" />
    <input type="hidden" asp-for="_userId" class="form-control" />
    <h2>Brugere tilmeldt Projekt nr: @Model._projectId | @Model._projectName</h2>
    <a asp-page="./AddUser" asp-route-projectId="@Model._projectId">Tilføj bruger</a>
    <table class="table">
        <thead>
        <tr>
            <th>Projekt ID</th>
            <th>Projekt Navn</th>
            
            <th>Email</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.ProjectUsersModel.Any())
        {
                foreach (var user in Model.ProjectUsersModel)
            {
                <tr>
                    <td> @user.ProjectId </td>
                    <td>@user.ProjectName</td>
                    
                    <td>@user.UserId</td>
                    <td></td>
                    <td>
                        @*<!-- <snippet_Edit> -->
                        <a asp-page="./EditUser" asp-route-projectId="@user.ProjectId">Rediger Bruger</a>
                        <!-- </snippet_Edit> -->
                        |*@
                        <!-- <snippet_Delete> -->
                            @*<a asp-page="./RemoveUser" asp-route-userId="@user.UserId" asp-route-projectId="@user.ProjectId">Fjern Bruger</a>*@
                        <!-- </snippet_Delete> -->
                    </td>
                    @*<td>
                        <a asp-page="./AddUser" asp-route-projectId="@user.ProjectId">Tilføj bruger</a>
                        |
                        <a asp-page="./RemoveUser" asp-route-projectId="@user.ProjectId">Fjern bruger</a>
                    </td>*@
                </tr>
            }
        }
        </tbody>
    </table>
</form>