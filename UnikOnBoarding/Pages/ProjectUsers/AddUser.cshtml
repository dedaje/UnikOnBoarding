@page
@model UnikOnBoarding.Pages.ProjectUsers.AddUserModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<h2>Opret Nyt Projekt</h2>
<h2>Tilmeldt bruger til Projekt nr: @Model.AddUser.ProjectViewModel.Id | @Model.AddUser.ProjectViewModel.ProjectName</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class ="form-group">
                <input type="hidden" asp-for="AddUser.ProjectViewModel.Id" class="form-control"/>
                <input type="hidden" asp-for="AddUser.ProjectViewModel.ProjectName" class="form-control"/>
                <input type="hidden" asp-for="AddUser.ProjectViewModel.DateCreated" class="form-control"/>
                <input type="hidden" asp-for="AddUser.ProjectViewModel.RowVersion" class="form-control"/>
                <input type="hidden" asp-for="AddUser.UserViewModel.Id" class="form-control"/>
                @*<input type="hidden" asp-for="AddUser.UserViewModel.UserId" class="form-control" />*@
                <input type="hidden" asp-for="AddUser.UserViewModel.RowVersion" class="form-control"/>

                <label asp-for="AddUser.UserViewModel.UserId"></label>
                <input asp-for="AddUser.UserViewModel.UserId" class="form-control"/>
                <span asp-validation-for="AddUser.UserViewModel.UserId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning">Tilføj Bruger Til Projekt</button>
        </form>
    </div>
</div>