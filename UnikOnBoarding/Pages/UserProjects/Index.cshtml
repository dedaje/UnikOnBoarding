    <h2>Mine projekter</h2>
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>Projekt ID</th>
                <th>Projekt Navn</th>

                <th>Opgaver</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if (Model.UserProjectsModel.Any())
            {
                foreach (var project in Model.UserProjectsModel)
                {
                    <tr>
                        <td> @project.Id </td>
                        <td>@project.ProjectName</td>
                        <td>
                            <a asp-page="../Tasks/Index" asp-route-projectId="@project.Id">Se Alle Opgaver</a>
                            |
                            <a asp-page="../Tasks/MyTasks" asp-route-projectId="@project.Id">Se Mine Opgaver</a>
                        </td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</form>