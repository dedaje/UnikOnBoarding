@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UnikOnBoarding.Areas.Identity.Pages.Admin.UsersModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

@*Tilføj "Registrer Bruger knap her og ændre OnPost metoden til at opdatere domain db efter bruger er registreret"*@
<form method="post">
    <table class="table table-sm table-striped table-bordered">
        <thead>
        <tr>
            <th>Username</th>
            <th>Normalized</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.NormalizedUserName</td>
                    <td>
                        <!-- <snippet_Claims> -->
                        <a asp-page="./Claims" asp-route-id="@user.Id">Manage Claims</a>
                        <!-- </snippet_Claims> -->
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</form>   
