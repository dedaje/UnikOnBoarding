@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UnikOnBoarding.Areas.Identity.Pages.Admin.UsersModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/homemadestyle.css" asp-append-version="true" />

<a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-success">Register</a>
<form method="post">
    <table class="table table-sm table-striped table-bordered">
        <thead>
        <tr>
            <th>Fulde navn</th>
            <th>Email</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(user.FirstName + " " + user.LastName)</td>
                    <td>@user.UserName</td>
                    <td>
                        <!-- <snippet_Claims> -->
                        <a asp-page="./Claims" asp-route-id="@user.Id" class="btn btn-warning">Håndter Claims</a>
                        <!-- </snippet_Claims> -->
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</form>   
